[commit]
	gpgsign = true
[core]
	excludesfile = ~/.config/git/ignore
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[init]
	defaultBranch = main
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autoStash = true
[tag]
	gpgsign = true
[user]
	name = Daniel Wang
	email = {{ .email }}
	signingkey = {{ onepasswordRead "op://Personal/id_ed25519/public_key" }}
